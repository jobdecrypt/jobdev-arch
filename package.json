{
  "name": "jobdev.io",
  "version": "1.0.0",
  "description": "Job D. Architect's landing page",
  "private": true,
  "main": "api-server.js",
  "test": "tests",
  "scripts": {
    "dev": "concurrently \"next dev\" \"node api-server\"",
    "dev:api": "nodemon api-server",
    "build": "next build",
    "start": "concurrently \"next start\" \"node api-server\"",
    "start:api": "node api-server",
    "test": "jest tests --coverage --maxWorkers=10",
    "test:watch": "jest --coverage --watch",
    "test:integration": "start-server-and-test start http-get://localhost:3000 cypress:run",
    "test:integration:watch": "start-server-and-test start http-get://localhost:3000 cypress:open",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^1.2.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^4.3.1",
    "highlight.js": "^11.0.1",
    "jwks-rsa": "^2.0.3",
    "morgan": "^1.10.0",
    "next": "^12.1.5",
    "nodemon": "^2.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "reactstrap": "^8.8.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.0.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^12.0.0",
    "autoprefixer": "^10.4.4",
    "babel-jest": "^27.0.6",
    "cypress": "^7.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "postcss": "^8.4.12",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.11.7",
    "tailwindcss": "^3.0.24"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "rootDir": "./",
    "moduleNameMapper": {
      ".(css)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "./tests/environment.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "collectCoverageFrom": [
      "components/**/*.*",
      "pages/**/*.*"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "repository": {
    "type": "git",
    "url": "\"https://www.github.com/jobdecrypt/jobdev.io"
  },
  "keywords": [
    "jobdev",
    "'jobdev.io'",
    "job",
    "jobdecrypt",
    "'job",
    "d.",
    "architect'",
    "architect",
    "d",
    "landing",
    "page",
    "landing",
    "page",
    "app",
    "homepage"
  ],
  "author": "Job D. Architect",
  "license": "MIT"
}
